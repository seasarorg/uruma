<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://uruma.sandbox.seasar.org">
  <workbench title="Uruma Example - RSS Reader" initWidth="1024"
    initialPerspectiveId="defaultPerspective" initHeight="800"
    image="uruma" statusLine="true">

    <menu>
      <menu text="ファイル(&amp;F)">
        <menuItem id="fileOpen" text="開く(&amp;O)" image="rss"
          accelerator="Ctrl+O" />
        <menuItem id="fileRename" text="名前の変更(&amp;M)\tF2"
          image="rss" accelerator="F2" />
      </menu>
    </menu>

    <perspective id="defaultPerspective" name="RSS" fixed="false"
      icon="uruma">
      <part ref="feedTreeView" ratio="30" position="LEFT" />
      <part ref="feedListView" ratio="70" position="TOP" />
      <part ref="feedBrowserView" ratio="50" position="BOTTOM" />
    </perspective>

    <perspective id="debugPerspective" name="Debug" fixed="false"
      icon="uruma">
      <part ref="debugTreeView" ratio="20" position="LEFT" />
      <part ref="debugContributionView" ratio="20" position="TOP" />
      <part ref="debugBrowserView" ratio="20" position="RIGHT" />
    </perspective>
  </workbench>
</template>
