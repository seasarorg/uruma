<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id></id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>uruma-${propject.version}.jar</include>
        <include>uruma-${propject.version}-sources.jar</include>
        <include>uruma-${propject.version}-javadoc.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>src</directory>
      <outputDirectory>/src</outputDirectory>
      <excludes>
        <exclude>main/assembly/*.*</exclude>
        <exclude>main/assembly</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>target/apidocs</directory>
      <outputDirectory>/apidocs</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>licenses</directory>
      <outputDirectory>/licenses</outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>target/uruma-${propject.version}-plugin-jar.zip</source>
      <outputDirectory>/rcp/eclipse/plugins</outputDirectory>
      <destName>org.seasar.uruma_${propject.version}.jar</destName>
    </file>
    <file>
      <source>configuration/config.ini</source>
      <outputDirectory>/rcp/eclipse/configuration</outputDirectory>
    </file>
  </files>

  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>nlink:nlink</include>
        <include>org.eclipse:*:jar:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
