<?xml version="1.0" encoding="UTF-8"?>
<!-- Assembly file for packaging Uruma plugin-jar -->
<assembly>
  <id>plugin-jar</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>META-INF</directory>
      <outputDirectory>/META-INF</outputDirectory>
    </fileSet>
    <fileSet>
      <includes>
        <include>plugin.xml</include>
        <include>splash.bmp</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.seasar.container:s2-framework
        </include>
        <include>org.seasar.container:s2-extension
        </include>
        <include>org.seasar.container:s2-tiger
        </include>
        <include>ognl:ognl</include>
        <include>aopalliance:aopalliance
        </include>
        <include>jboss:javassist</include>
        <include>commons-logging:commons-logging
        </include>
        <include>log4j:log4j</include>
        <include>nlink:nlink</include>
        <include> org.apache.geronimo.specs:geronimo-j2ee_1.4_spec
        </include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>